{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    },
   "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/index.ts",
    "./src/migrations/**/*.ts",
    "./src/seeders/**/*.ts"
  ]
}
